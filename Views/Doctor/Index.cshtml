


<div class="container text-center">
    <div class="row mt">
        <div class="col-3 ">
            <a href="/Patient/index" type="button" class="btn btn-danger"><i class="bi bi-plus-circle"></i>View All Reservations</a>
        </div>
    </div>
    <br />
    <div class="row ">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="~/images/@item.Img" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Specialization @item.Specialization</p>
                        <a href="/Patient/CreateNew?id=@item.Id" class="btn btn-success">Book Appointment</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
